QTabWidget::pane {
    border: 1px solid rgb(150, 150, 150);
    border-radius: 3px;
    /* background: rgb(150, 100, 100); */
}
QTabWidget::tab-bar {
    /* border: 1px solid rgb(36, 36, 36); */
    background-color: rgb(100, 100, 100);
}
QTabBar::tab {
    /* background: rgb(255, 240, 231); */
    font-family: "Microsoft YaHei";
    font-size: 11px;
    background: rgb(255, 241, 231);
    border: 1px solid rgb(230, 230, 230);
    border-radius: 3px;
    /* min-width: 12ex;
    min-height: 6ex; */
    padding: 2px 4px;
}
QTabBar::tab:selected, QTabBar::tab:hover {
    /* border-top: 2px solid red; */
    font-family: "Microsoft YaHei";
    font-size: 11px;
    border: 1px solid rgb(100, 100, 100);
    border-radius: 3px;
    padding-top: 3px;
    border-bottom-color: rgb(255, 240, 231); /*same as the pane color */
}
