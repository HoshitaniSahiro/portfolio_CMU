/*************菜单下拉按钮*****************/
QMenu::item {
    background-color: transparent;
}
/********菜单下拉按钮（被选择时）***********/
QMenu::item:selected {
    background-color: rgb(100, 100, 100);
}
/****************定义菜单栏***************/
QMenuBar {
    border-radius: 0;
    background-color: rgb(72, 72, 72);
    border-bottom: 1px solid rgb(36, 36, 36);
}
/************菜单栏按钮（被选择时）********/
QMenuBar::item:selected {
    background-color: rgb(100, 100, 100);
}
/************菜单栏按钮（鼠标悬停）********/
QMenu:hover {
    background-color: rgb(100, 100, 100);
}

